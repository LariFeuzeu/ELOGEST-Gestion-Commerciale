<Window x:Class="GES_COM_2.Views.Fenetrelogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GES_COM_2.Views"
        xmlns:vm="clr-namespace:GES_COM_2.ViewModels"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        Title="Fenetrelogin" Height="310" Width="400">
    <Window.DataContext>
        <vm:LoginVM/>
    </Window.DataContext>
    <Window.Resources>

        <Style TargetType="Label">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="200"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Moccasin"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>

        <Style x:Key="RoundButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Width" Value="60"/>
            <Setter Property="Background" Value="Green"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Foreground" Value="Orange"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>

        </Style>
        <Style TargetType="TextBlock" >
            <Setter Property="Background"
                    Value="Transparent"/>
        </Style>

        <Style x:Key="CustomTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#121149"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MinHeight" Value="30"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                              BorderBrush="{TemplateBinding BorderBrush}"
                              BorderThickness="{TemplateBinding BorderThickness}"
                              CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"
                              Focusable="False"
                              HorizontalScrollBarVisibility="Hidden"
                              VerticalScrollBarVisibility="Hidden">
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EAEAEA"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border CornerRadius="15"
            BorderBrush="#121149"
            BorderThickness="2"
            Background="White"  Margin="0,0,0,10">
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            
            <Border Grid.Row="0"
                    Grid.RowSpan="5"
                    Background="#121149"
                    CornerRadius="14 0 0 14">
                <Image  Source="/Assets/login.png" Stretch="Uniform"
                        VerticalAlignment="Top"
                        Width="75"
                        Margin="0 15 0 0"/>
            </Border>
            <Label Content="ELOGEST" 
                   Foreground="{StaticResource PrimaryOrangeColor}" 
                   Opacity="0.9"
                   FontSize="18" 
                   FontWeight="Bold" 
                   VerticalAlignment="Center" 
                   Grid.Column="0"
                   Grid.Row="1"
                   Grid.RowSpan="2"
                   HorizontalAlignment="Center"/>
            <Label Content="LOGIN" 
                   Foreground="{StaticResource PrimaryGrayColor}" 
                   Opacity="1"
                   FontSize="30" 
                   FontWeight="Bold" 
                   VerticalAlignment="Center" 
                   Grid.Column="1"
                   Grid.Row="0"
                   Grid.RowSpan="2"
                   HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" Grid.Row="2"
                        Grid.Column="1">
                <Label  Content="Login" HorizontalAlignment="Left" 
        		        VerticalAlignment="Center"/>
                <TextBox x:Name="TextBoxLogin"
                         Margin="35 0 0 0"
                         HorizontalAlignment="Right"
                         Style="{StaticResource CustomTextBoxStyle}"  
                         Text="{Binding Nom}" Width="140"
                         Height="40"
        		         VerticalAlignment="Stretch" />
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Grid.Column="1"
                    Grid.Row="3" Margin="0,11,0,0">
                <Label Content="Password"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"/>
                <PasswordBox x:Name="PassWordTextBox"  
                      Width="140"
                            
                     Height="40"/>


            </StackPanel>
            <StackPanel Grid.Row="4" 
                        Orientation="Horizontal"
                        Grid.Column="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <Button Cursor="Hand"
            		Command="{Binding CancelCommand}"
            		Background="Red"
            		Width="100" Height="40">

                    <TextBlock Text="Annuler"
                		Foreground="White"
                		FontWeight="Bold"
                		VerticalAlignment="Center"
                		FontSize="15">
                    </TextBlock>
                </Button>
                <Button Cursor="Hand"
            		Style="{StaticResource RoundButtonStyle}" 
            		Width="100" Height="40" Click="Button_Click_1">

                    <TextBlock Text="Valider"
                		Foreground="White"
                		FontWeight="Bold"
                		VerticalAlignment="Center"
                		FontSize="15">
                    </TextBlock>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
 