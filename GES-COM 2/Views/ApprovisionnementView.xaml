<UserControl x:Class="GES_COM_2.Views.ApprovisionnementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GES_COM_2.Views"
             xmlns:vm="clr-namespace:GES_COM_2.ViewModels"
             mc:Ignorable="d" 
         d:DesignHeight="720" d:DesignWidth="852">
    <UserControl.Resources>
        <Style x:Key="RoundButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Width" Value="60"/>
            <Setter Property="Background" Value="Green"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>

        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Background"
                    Value="Transparent"/>
        </Style>

        <Style x:Key="CustomTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="BorderBrush" Value="Orange"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MinHeight" Value="30"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                              BorderBrush="{TemplateBinding BorderBrush}"
                              BorderThickness="{TemplateBinding BorderThickness}"
                              CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"
                              Focusable="False"
                              HorizontalScrollBarVisibility="Hidden"
                              VerticalScrollBarVisibility="Hidden">
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EAEAEA"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <UserControl.DataContext>
        <vm:ApprovisionnementVM/>
    </UserControl.DataContext>
    <Border Background="White"
            CornerRadius="0 0 8 0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="9*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Column="0"
                        Grid.Row="0"
                        Margin="18,15,0,0">
                <StackPanel Orientation="Horizontal">
                    <Label Content="Recherche:"
                           Margin="10,10,10,10"
                		FontWeight="Bold"
                		/>
                    <TextBox x:Name="TextBoxRecher" 
                    	Width="140"
                    	Style="{StaticResource CustomTextBoxStyle}"
                    	Height="48"
                    	VerticalAlignment="Top" TextChanged="TextBoxRecher_TextChanged"/>

                </StackPanel>
            </StackPanel>
            <ListView x:Name="listeArticle" Grid.Column="0"
                    Grid.Row="1"    
                      FontFamily="Arial"
                      FontSize="12"
                      FontWeight="Heavy"
                      BorderBrush="#CAE9FF"
                      BorderThickness="3"
                      ItemsSource="{Binding FilteredArticles}"
                      PreviewMouseLeftButtonDown="listeArticle_PreviewMouseLeftButtonDown"
                      PreviewMouseLeftButtonUp="listeArticle_PreviewMouseLeftButtonUp"
                      SelectionChanged="listeArticle_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Width="270">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Height="30"
                                    Grid.Column="0"
                                    Grid.RowSpan="2"
                                    Width="30"
                                    CornerRadius="10"
                                    Background="Red"
                                    HorizontalAlignment="Left"/>
                            <TextBlock Text="{Binding NomA}"
                                         FontWeight="Bold"
                                          Grid.Column="1"
                                       Margin="10,0,0,0"
                                           Grid.Row="0"/>
                            <TextBlock Text="{Binding Qte}"
                                       Margin="10,0,0,0"
                                           Grid.Row="1"
                                           Grid.Column="1"
                                           Foreground="Red"/>
                            <TextBlock Text="{Binding PrixU}"
                                       Foreground="Green"
                                           Grid.Column="2"
                                           Grid.RowSpan="2"
                                           FontWeight="Bold"
                                       HorizontalAlignment="Right"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Grid Grid.Column="1" Margin="9,66,-13,6" Grid.RowSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="95"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <ComboBox
                    Text="Fournisseur"
                    Background="Tan"          
                    Margin="206,10,190,48" 
                   ItemsSource="{Binding Fournisseurs}" 
                    SelectedItem="{Binding SelectedFournisseur}"
                    SelectionChanged="ComboBox_SelectionChanged" RenderTransformOrigin="0.523,0.722">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding Nom}"
                                  FontWeight="Bold" />
                                <TextBlock Text="{Binding Fournisseur}"
                                   FontStyle="Italic"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>


                <ListView Grid.Row="1" SelectionChanged="ListView_SelectionChanged"
                              PreviewMouseLeftButtonDown="listePanier_PreviewMouseLeftButtonDown"
                              MouseDoubleClick="listePanier_MouseDoubleClick"
                              x:Name="listePanier"
                          ItemsSource="{Binding PanierA}"
                          Background="White"
                          BorderBrush="#CAE9FF" 
                          BorderThickness="3"
                          Margin="6,0,0,94">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn>
                                <GridViewColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="Produit"
                                                   Width="200"
                                                   Height="25"
                                                   FontSize="23"
                                                   Background="#85C0E9"
                                                   VerticalAlignment="Center"
                                                   TextAlignment="Left"
                                                   HorizontalAlignment="Left"/>
                                    </DataTemplate>
                                </GridViewColumn.HeaderTemplate>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock 
                                                       Height="25"
                                                       FontSize="20"
                                                       VerticalAlignment="Center"
                                                Text="{Binding Article.NomA}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn>
                                <GridViewColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="Qté"
                                                       Background="#85C0E9"
                                                       Height="25"
                                                       FontSize="23"
                                                       VerticalAlignment="Center"
                                                   Width="50"
                                                   TextAlignment="Left"
                                                   HorizontalAlignment="Left"/>
                                    </DataTemplate>
                                </GridViewColumn.HeaderTemplate>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding QuantiteApp}"
                                                 LostFocus="TextBox_LostFocus"
                                                 BorderBrush="Transparent"
                                                 IsReadOnly="False"
                                                       Height="25"
                                                       FontSize="20"
                                                       VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn>
                                <GridViewColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="Prix"
                                                       Background="#85C0E9"
                                                       Height="25"
                                                       FontSize="23"
                                                       VerticalAlignment="Center"
                                                   Width="75"
                                                   TextAlignment="Left"
                                                   HorizontalAlignment="Left"/>
                                    </DataTemplate>
                                </GridViewColumn.HeaderTemplate>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding PrixU}"
                                                       Height="25"
                                                       FontSize="20"
                                                 LostFocus="TextBox_LostFocus"
                                                       VerticalAlignment="Center"
                                                     IsReadOnly="False"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn>
                                <GridViewColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="Sous Total"
                                                       Background="#85C0E9"
                                                       Height="25"
                                                       FontSize="23"
                                                       VerticalAlignment="Center"
                                                   Width="100"
                                                   TextAlignment="Left"
                                                   HorizontalAlignment="Left"/>
                                    </DataTemplate>
                                </GridViewColumn.HeaderTemplate>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding SousTotal}"
                                                       Height="25"
                                                       FontSize="20"
                                                       VerticalAlignment="Center"/>
                                    </DataTemplate>

                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn>
                                <GridViewColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="Date de Péremtion"
                                                       Background="#85C0E9"
                                                       Height="25"
                                                       FontSize="23"
                                                       VerticalAlignment="Center"
                                                   Width="100"
                                                   TextAlignment="Left"
                                                   HorizontalAlignment="Left"/>
                                    </DataTemplate>
                                </GridViewColumn.HeaderTemplate>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <DatePicker Text="{Binding DatePeremtion}"
                                                       Height="25"
                                                       FontSize="20"
                                                       VerticalAlignment="Center"/>
                                    </DataTemplate>

                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>


                            <GridViewColumn>
                                <GridViewColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock Text=""
                                                       Background="#85C0E9"
                                                       Height="25"
                                                       FontSize="23"
                                                       VerticalAlignment="Center"
                                                   Width="30"
                                                   TextAlignment="Left"
                                                   HorizontalAlignment="Left"/>
                                    </DataTemplate>
                                </GridViewColumn.HeaderTemplate>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image Source="/Assets/corbeille.png"
                                                   Height="15"
                                                   x:Name="imgDelete"
                                                   Width="20"
                                                   Cursor="Hand"
                                                   PreviewMouseLeftButtonDown="Image_PreviewMouseLeftButtonDown">
                                            <!--<Image.Style>
                                                <Style TargetType="Image">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver"
                                                                     Value="true">
                                                            <Setter Property="Source"
                                                                        Value="/Assets/corbeille.png"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style>-->
                                        </Image>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>

                </ListView>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="0">
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Total" FontWeight="DemiBold" FontSize="18" VerticalAlignment="Center"/>
                                <TextBlock x:Name="TextBoxTotal" 
                                   Width="155"
                                    FontSize="20"
                                    FontWeight="Heavy"
                             VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Reste" FontWeight="DemiBold" FontSize="18" VerticalAlignment="Center"/>
                                <TextBlock x:Name="TextBoxReste" 
                                   Width="155"
                                    FontSize="20"
                                    FontWeight="Heavy"
                             VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="0">
                        <Label Content="Montant Versé" 
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                        <TextBox x:Name="TextBoxMontantVers"  
                                  Style="{StaticResource CustomTextBoxStyle}"
                                 Width="115"
                                 TextChanged="TextBoxMontantVers_TextChanged"
                                 FontSize="20"
                                FontWeight="Bold"
                             VerticalAlignment="Center" Height="44" Margin="0,10,0,27"/>
                    </StackPanel>

                    <Button Grid.Column="0" 
                            Click="Button_Click"
                            Grid.Row="1" Content="Valider" 
                            Command="{Binding ValiderCommand}"
                             Style="{StaticResource RoundButtonStyle}"
                             Width="115" 
                            Height="47" 
                            FontSize="18"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Cursor="Hand" Margin="80,20,91,20"/>
                    <Button Grid.Column="1" 
                            Grid.Row="1" 
                            Content="Annuler" 
                            Command="{Binding AnnulerCommand}"
                             Width="114" 
                            Height="47" 
                            FontSize="18"
                            Background="Red"
                            Style="{StaticResource RoundButtonStyle}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Cursor="Hand" Margin="86,19,86,19.667"/>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</UserControl>
